{
    "post/signUp": {
        "type": "object",

        "properties": {
            "fname": {
                "type": "string"
            },
            "lname": {
                "type": "string"
            },
            "email": {
                "type": "string",
                "pattern": "^([A-Za-z0-9_\\-\\.])+\\@([A-Za-z0-9_\\-\\.])+\\.([A-Za-z]{2,4})$"
                
            },
            "phone": {
                "type": "string",
                "pattern": "^[+]*[(]{0,1}[0-9]{1,4}[)]{0,1}[-\\s\\./0-9]*$"
            },
            "password": {
                "type": "string"
            }
        },

        "required": ["fname", "lname","email", "phone", "password"]
    },

    "post/signIn": {
        "type": "object",

        "properties": {
            "email": {
                "type": "string"
            },
            "password": {
                "type": "string"
            }
        },

        "required" : ["email", "password"]
    },

    "put/student": {
        "type": "object",

        "properties": {
            "id": {
                "type": "integer"
            },
            
            "updateData": {
                "type": "object",
                
                "fname": {
                    "type": "string"
                },
                "lname": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "pattern": "^([A-Za-z0-9_\\-\\.])+\\@([A-Za-z0-9_\\-\\.])+\\.([A-Za-z]{2,4})$"        
                },
                "phone": {
                    "type": "integer",
                    "pattern": "/^\\(?([0-9]{3})\\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/"
                },
                "password": {
                    "type": "string"
                }
            
            }

        },

        "required": ["id", "updateData"]
    }
}